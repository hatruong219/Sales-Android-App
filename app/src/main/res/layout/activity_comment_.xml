<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Comment_Activity">
    <androidx.appcompat.widget.Toolbar
        app:title="Bình luận về sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        tools:ignore="MissingConstraints"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWriteComment"
        android:layout_margin="10dp"
        android:text="Viết nhận xét"
        android:background="@drawable/botronbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B8B6B6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>